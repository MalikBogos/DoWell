<Window x:Class="DoWell.Views.FindDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Find what:"/>
        <TextBox Grid.Row="1" x:Name="SearchTextBox" Margin="0,5,0,10" 
                 Height="25" VerticalContentAlignment="Center"/>

        <CheckBox Grid.Row="2" x:Name="MatchCaseCheckBox" Content="Match case" Margin="0,5,0,0"/>

        <TextBlock Grid.Row="3" x:Name="ResultTextBlock" Margin="0,10,0,0" 
                   TextWrapping="Wrap" Foreground="Gray"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="FindNextButton" Content="Find Next" Width="75" Height="25" 
                    Margin="0,0,10,0" Click="FindNextButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Width="75" Height="25" 
                    Click="CloseButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>